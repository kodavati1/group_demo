<%= simple_form_for(@type, remote: true, html: {class: 'customize_simple_form', id: 'form_types'}) do | f | %>
  <%= render 'types/user_detail_for_segment', obj: @types.present? ? @types.last : nil, segment: 'type',f: f %>
    <div id="types_list">
      <%= render 'types/types_list' %>
    </div>
    <div class="clear_with_height"></div>
    <%# unless current_party.published? %>
      <div id='type_flash_notice' class="collapse"></div>
      <div id="type_errors"></div>

      <div class="form-group mrgn_lft_2">
        <%#= hidden_field_tag :segment_detail_id, sub_seg.id %>
        <%= f.input :type, input_html: {class: 'form-control col-xs-5'}, placeholder: 'Enter type' %>
      </div>
    <%#end %>
<% end %>
<script>
  $('#reset_type').click(function () {
      $('#form_types')[0].reset();
  });
</script>